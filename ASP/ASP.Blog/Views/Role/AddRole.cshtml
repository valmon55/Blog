@model ASP.Blog.BLL.ViewModels.Tag.TagViewModel

@using ASP.Blog.Data.Entities;

@{
    ViewData["Title"] = "Добавление роли";
}

<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>

<h2>Добавление роли</h2>
<hr>
<div>Название</div>
<div class="tag-block">
    <form class="frm" method="post" asp-controller="User" asp-action="AddRole">
        <div>
            <div class="mrgn">
                <label >Название</label><br />
                <span class="text-danger" ></span>
            </div>
        </div>
        <div>
            <div class="mrgn">
                <label >Описание</label><br />
                <textarea class="mrgn textarea" placeholder="Описание" ></textarea>
            </div>
        </div>
        <div>
            <input class="enter_submit" type="submit" value="Добавить" />
        </div>
    </form>
    <a method="get" asp-action="AllRoles" asp-controller="User">Перейти к списку всех ролей</a>
</div>
