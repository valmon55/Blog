@model ASP.Blog.BLL.ViewModels.UserViewModel

@{
    ViewData["Title"] = "EditUser";
}

<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>

<h2>Обновление пользовательских данных</h2>
<div class="tag-block">
    <form method="post" asp-action="Update" asp-controller="User">
        @foreach(var role in Model.CheckedRolesDic)
        {
            if (role.Value == true)
            {
                <input type="checkbox" name="SelectedRoles" checked="checked" value=@role.Key.Id />
            }
            else
            {
                <input type="checkbox" name="SelectedRoles" value=@role.Key.Id />
            }
            <label>@role.Key.Name</label>
        }
        <div class="frm_text mrgn">
            <input class="frm_text" asp-for="Id" type="text" value="@Model.Id" hidden />            
        </div>
        <div class="mrgn">
            <label asp-for="Last_Name"></label><br />
            <input asp-for="Last_Name" />
        </div>
        <div class="mrgn">
            <label asp-for="First_Name"></label><br />
            <input asp-for="First_Name" />
        </div>
        <div class="frm mrgn">
            <label asp-for="Middle_Name"></label><br />
            <input class="frm_text" asp-for="Middle_Name" type="text" value="@Model.Middle_Name" />
        </div>
        <div class="mrgn">
            <label asp-for="Email"></label><br />
            <input asp-for="Email" />
        </div>
        <div class="mrgn">День рождения</div>
@*        <div class="mrgn">
            <input asp-for="BirthDate" type="date" value="@Model.BirthDate" />
        </div>
*@        
        <div class="mrgn" id="birthday" onload="FillData(@Model.Year, @Model.Month, @Model.Day)">
            <select asp-for="Day" class="form-control date-control" ID="day">
                <option value="">@Model.Day</option>
            </select>
            <span asp-validation-for="Day" class="text-danger"></span>

            <select asp-for="Month" class="form-control date-control" asp-items="Html.GetEnumSelectList<ASP.Blog.BLL.ViewModels.Months>()"
                    onchange="CorrectDay()" ID="month">
                <option value="">@Model.Month</option>
            </select>

            <span asp-validation-for="Month" class="text-danger"></span>

            <select asp-for="Year" class="form-control date-control" ID="year"
                    asp-items="Enumerable.Range(DateTime.Now.AddYears(-100).Year, DateTime.Now.AddYears(-14).Year - DateTime.Now.AddYears(-100).Year).Reverse().Select(x=> new SelectListItem(x.ToString(), x.ToString()))"
                    onchange="CorrectDay()">
                <option value="">@Model.Year</option>
            </select>
            <span asp-validation-for="Year" class="text-danger"></span>
        </div>


        <div class="center">
            <input class="enter-submit" type="submit" value="Обновить"/>
        </div>
    </form>    

    <script src="http://code.jquery.com/jquery-latest.js"></script>
    <script type="text/javascript">
        function FillData(y, m, d) {
            FillDays();
            FillMonths();
            FillYears();
            SetCurrentDay(y, m, d);
        }
        function FillDays() {
            var day = document.getElementById("day");
            for (var i = 1; i <= 31; i++) {
                AddOption(day, i, i);
            }
        }
        function FillMonths() {
            var month = document.getElementById("month");
            AddOption(month, 1, "Январь");
            AddOption(month, 2, "Февраль");
            AddOption(month, 3, "Март");
            AddOption(month, 4, "Апрель");
            AddOption(month, 5, "Май");
            AddOption(month, 6, "Июнь");
            AddOption(month, 7, "Июль");
            AddOption(month, 8, "Август");
            AddOption(month, 9, "Сентябрь");
            AddOption(month, 10, "Октябрь");
            AddOption(month, 11, "Ноябрь");
            AddOption(month, 12, "Декабрь");
        }
        function FillYears() {
            var year = document.getElementById("year");
            var currentDate = new Date();
            for (var i = 0; i < 100; i++) {
                AddOption(year, i, currentDate.getFullYear() - i)
            }
        }
        function SetCurrentDay(y, m, d) {
            var currentDate = new Date();
            var month = document.getElementById("month");
            var year = document.getElementById("year");
            var day = document.getElementById("day");

            year.selectedIndex = currentDate.getFullYear() - y;
            month.selectedIndex = m - 1;
            CorrectDay();
            day.selectedIndex = d;
        }
        function CorrectDay() {
            var month = document.getElementById("month");
            var year = document.getElementById("year");
            var day = document.getElementById("day");
            var t = document.getElementById("test_val");
            var y = year.options[year.selectedIndex].value;
            var m = month.options[month.selectedIndex].value;
            var d = day.options[day.selectedIndex].value;

            t.textContent = year.selectedIndex;

            if (month.options[month.selectedIndex].value != 0 && year.options[year.selectedIndex].value != 0) {
                var dayCount = 32 - new Date(year.options[year.selectedIndex].value, month.options[month.selectedIndex].value - 1, 32).getDate();
                day.options.length = 0;
                for (var i = 1; i <= dayCount; i++) {
                    AddOption(day, i, i);
                }
            }
        }
        function AddOption(ddl, text, value) {
            var opt = document.createElement("OPTION");
            opt.text = text;
            opt.value = value;
            ddl.options.add(opt);
        }

    </script>
</div>