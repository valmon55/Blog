@model ASP.Blog.BLL.ViewModels.Comment.CommentViewModel

@using ASP.Blog.Data.Entities;

@{
    ViewData["Title"] = "Редактирование комментария";
}

<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>

<h2>Редактирование тега</h2>
<div>    
    <form method="post" asp-controller="Comment" asp-action="Update" >
        <div>
            <input class="form-control" asp-for="Id" hidden />
            <input asp-for="CommentDate" />
            <input asp-for="ArticleId" />
            <input asp-for="UserId" />
            <textarea placeholder="Текст комментария" asp-for="Comment">@Model.Comment</textarea>
        <div>
            <input type="submit" value="Сохранить"/>
        </div>
    </form>
</div>
